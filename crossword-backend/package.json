{
  "name": "crossword-backend",
  "module": "app.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run bin/server.ts",
    "dev": "bun --watch bin/server.ts",
    "migrate:make": "knex migrate:make -x ts",
    "migrate:latest": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "create-user": "bun run create-user.ts",
    "create-puzzles-from-answers": "bun run scripts/create-puzzles-from-answer-image.ts",
    "batch-explanations": "bun run scripts/batch-explanation-interactive.ts",
    "batch-create": "bun run scripts/batch-explanation-auto.ts prepare",
    "batch-retrieve": "bun run scripts/batch-explanation-auto.ts apply"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "latest",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/web-push": "^3.6.4",
    "knex": "^3.1.0",
    "ts-node": "^10.9.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@google/genai": "^1.35.0",
    "@inquirer/prompts": "^8.2.0",
    "@openrouter/sdk": "^0.3.12",
    "@types/he": "^1.2.3",
    "@types/inquirer": "^9.0.9",
    "ajv": "^8.17.1",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.5.0",
    "he": "^1.2.0",
    "hono": "^4.11.9",
    "inquirer": "^13.2.1",
    "jsonwebtoken": "^9.0.3",
    "openai": "^6.15.0",
    "sqlite3": "^5.1.7",
    "web-push": "^3.6.7",
    "zod": "^4.3.6"
  }
}
